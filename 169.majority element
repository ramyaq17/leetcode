import java.util.Arrays;
class Solution {
    public int majorityElement(int[] nums) {
        int count=1;
        Arrays.sort(nums);
        if(nums.length>1)
        {
        for(int i=0;i<nums.length-1;i++)
        {
           if(nums[i]==nums[i+1])
           {
               count++;
           
            if(count>nums.length/2)
              {
                return nums[i];

              }
              }

              else
              {
                count=1;
              }
           
        }}
        else
        {
            return nums[0];
        }
       return 0;
    }

}
